    <imageobject>
      <imagedata fileref="Kopete_icq_create_new_account.png" format="PNG"/>
    </imageobject>
    <textobject>
      <phrase
>Digitare i propri i dati</phrase>
    </textobject>
    <caption>
      <para
>Digitare i propri i dati</para>
    </caption>
  </mediaobject>
</screenshot>
</para>
<para
