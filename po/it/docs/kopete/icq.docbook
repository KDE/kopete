  <mediaobject>
    <imageobject>
      <imagedata fileref="Kopete_icq_activate_new_account1.png" format="PNG"/>
    </imageobject>
    <textobject>
      <phrase
>fare clic sul collegamento di verifica nel messaggio di posta e verificare la propria registrazione</phrase>
    </textobject>
    <caption>
      <para
